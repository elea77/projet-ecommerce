{% extends 'sidenav.html.twig' %}

{% block title %}ReaGames - Dashboard Jeux{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/css/games.css') }}">
    <link rel="stylesheet" href="{{ asset('/css/pagination1.css') }}">
{% endblock %}

{% block body %}

    <div class="content">
        <h1>Jeux</h1>
        <div class="table">
            <table>
                <tr>
                    <th>ID</th>
                    <th>Nom du jeu</th>
                    <th>Code</th>
                    <th>Prix</th>
                    <th>Quantité</th>
                    <th>Actions</th>
                </tr>
                {% for game in games %}
                    <tr>
                        <td>{{ game.id }}</td>
                        <td>{{ game.name }}</td>
                        <td>{{ game.code }}</td>
                        <td>{{ game.price }} €</td>
                        <td>{{ game.quantity }}</td>
                        <td>
                            <a href=""><span class="iconify" data-inline="false" data-icon="ant-design:edit-outlined" style="font-size: 30px; color: black;"></span></a>
                            <a href="{{ path('deleteGame', {id : game.id} ) }}"><span class="iconify" data-inline="false" data-icon="ant-design:delete-outlined" style="font-size: 30px; color: black;"></span></a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
            <div class="navigation">
                {{ knp_pagination_render(games) }}
            </div>
        </div>
    </div>

{% endblock %}
