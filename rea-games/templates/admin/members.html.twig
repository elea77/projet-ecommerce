{% extends 'sidenav.html.twig' %}

{% block title %}ReaGames - Dashboard Utilisateurs{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/css/members.css') }}">
    <link rel="stylesheet" href="{{ asset('/css/pagination1.css') }}">
{% endblock %}

{% block body %}

    <div class="content">
        <h1>Membres</h1>
        <div class="table">
            <table>
                <tr>
                    <th>ID</th>
                    <th>Pseudo</th>
                    <th>Pr√©nom</th>
                    <th>Nom</th>
                    <th>Adresse mail</th>
                    <th>Date du compte</th>
                    <th>Actions</th>
                </tr>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.registerDate.date|date("m/d/Y") }}</td>
                        <td>
                            <a href="{{ path('deleteMembers', {id : user.id} ) }}"><span class="iconify" data-inline="false" data-icon="ant-design:delete-outlined" style="font-size: 30px; color: black;"></span></a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
            <div class="navigation">
                {{ knp_pagination_render(users) }}
            </div>
        </div>
    </div>

{% endblock %}
