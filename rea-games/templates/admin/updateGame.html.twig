{% extends 'sidenav.html.twig' %}

{% block title %}ReaGames - modification jeu{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/css/updateGame.css') }}">
{% endblock %}

{% block body %}

    <div class="container">
        <h1>Modification du jeu</h1> 
        
        <form method="post">
            <label>Nom du jeu:</label><br>
            <input type="text" name="newName" class="input-large" value="{{ game.name }}" required><br>
            <label>Description du jeu:</label><br>
            <textarea rows="4" maxlength="550" name="newDesc">{{ game.description }}</textarea><br>
            <label>Prix du jeu:</label><br>
            <input type="number" step="0.01" name="newPrice" value="{{ game.price }}" class="input-large" required><br>
            <button type="submit" name="submit" class="button">Modifier</button>
        </form>
        <h1>Modification des images du jeu</h1>
        {% for message in app.flashes('success') %}
            <div class="alert" style="text-align: center;">
                {{ message }} <br>
            </div>
        {% endfor %}
        {{ form(form1) }}<br>
        {{ form(form2) }}
    </div>

{% endblock %}