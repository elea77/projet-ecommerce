{% extends 'base.html.twig' %}

{% block title %}ReaGames - Recherche{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/css/home.css') }}">
    <link rel="stylesheet" href="{{ asset('/css/pagination1.css') }}">
{% endblock %}

{% block body %}

    <div class="container">

        <h2>Éléments correspondant à la recherche "{{ search }}" :</h2>

        <div class="catalogue">
            {% for result in results %}
            <div class="game">
                <a href="{{ path('game', {id : result.id}) }}">
                    <img src="{{ asset('/game-img/') }}{{ result.img1 }}" alt="">
                    <div class="game-name">
                        <p> {{ result.name }} </p>
                    </div>
                </a>
            </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}