{% extends 'base.html.twig' %}

{% block title %}ReaGames - Profil{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/css/profile.css') }}">
{% endblock %}

{% block body %}

    <div class="container">
        <h1>Profil</h1>
        <div id="profile">
            <div class="user-info">
                <img src="{{ asset('/img/user.png') }}" width="10%" alt="">
                <div class="info">
                    <p>Pseudo : <b>{{ user.username }}</b></p>
                    <p>Prénom : <b>{{ user.firstname }}</b></p>
                    <p>Nom : <b>{{ user.lastname }}</b></p>
                    <p>Adresse mail : <b>{{ user.email }}</b></p>
                    <p>Date de naissance : <b>{{ user.birthday|date('d/m/Y') }}</b></p>
                    <p>Solde : <b>{{ user.balance }} €</b></p>
                </div>
            </div>
            <div class="buttons">       
                <button id="edit">Modifier le profil</button>
                <button>Ajouter de l'argent</button>
            </div>
        </div>
        <div id="edit-profile" style="display: none;">
            <div class="edit-info">
                <div class="edit-img">
                    <img src="{{ asset('/img/user.png') }}" width="10%" alt=""><br>
                    <input type="file" name="">
                </div>
                <div class="edit-password">
                    <h4>Modifier le mot de passe</h4>
                    <input type="password" name="password" placeholder="Ancien mot de passe"><br>
                    <input type="password" name="password" placeholder="Nouveau mot de passe"><br>
                    <input type="password" name="confirm" placeholder="Confirmer le mot de passe"><br>
                </div>   
            </div>
            <div class="buttons"> 
                <button id="cancel" onclick="location.href='/profile'">Annuler</button>      
                <button type="submit">Enregistrer</button>
            </div>
        </div>
    </div>

    <script>
        var profile = document.getElementById('profile');
        
        document.getElementById('edit').addEventListener('click', function () {
            if(profile.style.display === 'block') {
                document.getElementById('profile').style.display = 'none'
                document.getElementById('edit-profile').style.display = 'block'
            } else {
                document.getElementById('edit-profile').style.display = 'block'
                document.getElementById('profile').style.display = 'none'
            }
            
        })
    
    </script>

{% endblock %}


